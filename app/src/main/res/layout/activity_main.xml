<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Número de Factura -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Factura"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/invoice_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número de Factura"
            android:inputType="number" />

        <!-- Fecha de Emisión -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Fecha de Emisión"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/invoice_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Emisión"
            android:inputType="datetime|date" />

        <!-- Fecha de Expiración -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Fecha de Expiración"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/invoice_expiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Expiración"
            android:inputType="datetime|date" />

        <!-- Emisor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Datos del Emisor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emitter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/emitter_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido" />

        <EditText
            android:id="@+id/emitter_fiscal_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número Fiscal" />

        <EditText
            android:id="@+id/emitter_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección" />

        <EditText
            android:id="@+id/emitter_city_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad y CP" />

        <EditText
            android:id="@+id/emitter_iban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IBAN" />

        <!-- Receptor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Datos del Receptor"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/receiver_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido" />

        <EditText
            android:id="@+id/receiver_fiscal_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número Fiscal" />

        <EditText
            android:id="@+id/receiver_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección" />

        <EditText
            android:id="@+id/receiver_city_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad y CP" />

        <!-- Servicios -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Servicios"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/services_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/add_service_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Añadir Servicio" />

        <!-- Botón Emitir -->
        <Button
            android:id="@+id/emit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Emitir" />
    </LinearLayout>
</ScrollView>